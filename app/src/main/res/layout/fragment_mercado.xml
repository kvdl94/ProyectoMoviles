<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMercado">

    <!-- TODO: Update blank fragment layout -->


    <ListView
        android:id="@+id/listView"
        android:layout_width="415dp"
        android:layout_height="569dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/contenedorFiltros"
        android:layout_width="373dp"
        android:layout_height="58dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@color/white"
        android:orientation="horizontal"

        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBoxPortero"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="PT"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxDefensa"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="DF"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxCentroCampista"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="CC"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxDelantero"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="DL"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxFavortios"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="FAV"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedorInfo"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/contenedorFiltros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Presupuesto"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPresupuesto"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jugadores fichados"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFichados"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>